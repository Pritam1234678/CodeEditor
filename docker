# Use Node.js base image
FROM node:16

# Install necessary compilers
RUN apt-get update && apt-get install -y \
    g++ \
    default-jdk \
    python3

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Install Node.js dependencies
RUN npm install

# Expose port 8000
EXPOSE 8000

# Start the server
CMD ["node", "Api.js"]
